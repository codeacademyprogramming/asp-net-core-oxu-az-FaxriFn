@model List<News>
@{
    ViewData["Title"] = "Home Page";
}

<div class="section">
    <!-- CONTAINER -->
    <div class="container">
        <!-- ROW -->
        <div class="row">
            <!-- Main Column -->
            <div class="col-md-12">
                <!-- section title -->
                <div class="section-title">
                    <h2 class="title">Trending Posts</h2>
                    <!-- tab nav -->
                    <ul class="tab-nav pull-right">
                        <li class="active"><a data-toggle="tab" href="#tab1">All</a></li>
                        <li><a data-toggle="tab" href="#tab1">News</a></li>
                        <li><a data-toggle="tab" href="#tab1">Sport</a></li>
                        <li><a data-toggle="tab" href="#tab1">Music</a></li>
                        <li><a data-toggle="tab" href="#tab1">Business</a></li>
                        <li><a data-toggle="tab" href="#tab1">Lifestyle</a></li>
                    </ul>
                    <!-- /tab nav -->
                </div>
                <!-- /section title -->
                <!-- Tab content -->
                <div class="tab-content">
                    <!-- tab1 -->
                    <div id="tab1" class="tab-pane fade in active">
                        <!-- row -->
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-3 col-sm-6">
                                    <!-- ARTICLE -->
                                    <article class="article">
                                        <div class="article-img"> 
                                            <a  asp-action="Details" asp-route-Id="@item.Id"> 
                                                <img src="~/img/@item.Image" alt="">
                                            </a>
                                            <ul class="article-info">
                                                <li class="article-type"><i class="fa fa-camera"></i></li>
                                            </ul>
                                        </div>
                                        <div class="article-body">
                                            <h4 class="article-title"><a href="#">@item.Title</a></h4>
                                            <ul class="article-meta">

                                                <li><i class="fa fa-clock-o"></i> @item.CreateAt</li>
                                                <a asp-action="Like" asp-route-Id="@item.Id">
                                                <li><i class="fas fa-thumbs-up"></i>   @item.Like </li>

                                                </a>
                                                <a asp-action="DisLike" asp-route-Id="@item.Id">
                                                    <li><i class="fas fa-thumbs-down"></i>  @item.DisLike </li>
                                                </a>

                                            </ul>
                                        </div>
                                    </article>
                                    <!-- /ARTICLE -->
                                </div>

                            }
                        </div>
                        <!-- /row -->
                        <!-- row -->
                   
                    </div>
                    <!-- /tab1 -->
                </div>
                <!-- /tab content -->
            </div>
            <!-- /Main Column -->
        </div>
        <!-- /ROW -->
    </div>
    <!-- /CONTAINER -->
</div>
<!-- /SECTION -->
<!-- /SECTION -->
<!-- AD SECTION -->
